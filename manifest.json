{
  "manifest_version": 3,
  "name": "Atomicmail Quick Access",
  "version": "1.0",
  "description": "Provides quick access to your Atomicmail inbox.",
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "host_permissions": [
    "https://*.atomicmail.io/"
  ]
}
